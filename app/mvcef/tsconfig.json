// tsconfig.json
{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    /* Paths */
    "outDir": "./out-tsc/app",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*" : ["src/*"]
    }
  },
  "include": ["src/**/*"]
}
